<AnchorPane prefHeight="400.0" prefWidth="350.0" style="-fx-background-color: linear-gradient(to right, #F96AC1, #231F20, #1C4C7C);" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginFormController">
   <children>
      <ImageView fitHeight="101.0" fitWidth="121.0" layoutX="128.0" layoutY="118.0" pickOnBounds="true" preserveRatio="true">
