            <Cursor fx:constant="TEXT" />
         </cursor></TextField>
      <Button fx:id="btnLogin" layoutX="139.0" layoutY="280.0" mnemonicParsing="false" onAction="#clickOnAction" prefHeight="16.0" prefWidth="78.0" style="-fx-background-color: linear-gradient(to right, #0f2027, #203a43, #2c5364);;" text="Login" textFill="WHITE">
